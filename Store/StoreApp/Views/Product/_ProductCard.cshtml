@model Product

<div class="col-sm-12 col-md-4  my-3">
    <div class="card" style="width: 18rem;">
        <img src="@Model?.ImageUrl" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@Model.ProductName</h5>
            <h6 class="card-text">@Model.Summary</h6>
            <p class="card-text">@Model.Price.ToString("C")</p>
            <div class="btn btn-group">
                <a asp-action="Get" asp-route-id="@Model.ProductId" class="btn btn-primary"><i
                        class="fa-solid fa-arrow-right"></i>
                    See details</a>

                <form id="@Model.ProductId" asp-page="/cart" method="post">
                    <input type="hidden" asp-for="ProductId" />
                    <input type="hidden" name="ReturnUrl" value="/Product/Get/@Model.ProductId" />
                    <button type="submit" class="btn btn-outline-primary">
                        <i class="fa fa-cart-plus"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>