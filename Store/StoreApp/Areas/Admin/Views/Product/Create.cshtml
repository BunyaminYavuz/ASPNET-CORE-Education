@model ProductDtoForInsertion

<div class="container">
    <h2 class="text-center mt-4 mb-4">Create Product</h2>

    <form method="post" asp-action="Create" enctype="multipart/form-data">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="CategoryId"></label>
            <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories"></select>
        </div>
        <div class="form-group">
            <label asp-for="ProductName"></label>
            <input type="text" class="form-control" asp-for="ProductName" placeholder="Enter product name" />
        </div>

        <div class="form-group">
            <label asp-for="Summary"></label>
            <input type="text" class="form-control" asp-for="Summary" placeholder="Enter summary" />
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input type="number" class="form-control" asp-for="Price" placeholder="Enter product price" />
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl"></label>
            <input type="file" class="form-control" name="file" />
        </div>

        <div class="btn-group my-3" role="group" aria-label="Product actions">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i>
                Save
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fa-solid fa-list"></i>
                Product List
            </a>
        </div>

    </form>
</div>
