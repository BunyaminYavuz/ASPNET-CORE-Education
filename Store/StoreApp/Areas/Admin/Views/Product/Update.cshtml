@model ProductDtoForUpdate

<div class="container">
    <h2 class="text-center mt-4 mb-4">Update Product</h2>

    <form method="post" asp-action="Update" enctype="multipart/form-data">
        <div class="text-danger" asp-validation-summary="All"></div>

        <input type="hidden" asp-for="ProductId" />

        <div class="form-group my-3">
            <label asp-for="CategoryId"></label>
            <select class="form-control" asp-for="CategoryId" asp-items="@ViewBag.Categories"></select>
        </div>

        <div class="form-group my-3">
            <label asp-for="ProductName"></label>
            <input class="form-control" asp-for="ProductName" placeholder="Enter product name" />
        </div>

        <div class="form-group my-3">
            <label asp-for="Summary"></label>
            <input class="form-control" asp-for="Summary" placeholder="Enter summary" />
        </div>

        <div class="form-group my-3">
            <label asp-for="Price"></label>
            <input class="form-control" asp-for="Price" placeholder="Enter product price" />
        </div>

        <div class="form-group my-3">
            <img class="rounded shadow" width="150"  src="@Model.ImageUrl" alt="Current image">
        </div>

        <div class="form-group my-3">
            <label asp-for="ImageUrl"></label>
            <input class="form-control" type="file" name="file" />
        </div>

        <div class="btn-group my-3" role="group" aria-label="Product actions">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i>
                Update
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fa-solid fa-list"></i>
                Product List
            </a>
        </div>

    </form>
</div>
